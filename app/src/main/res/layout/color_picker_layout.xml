<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#212121"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Background Color"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

            <Button
                    android:id="@+id/btnColor1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="#FF5252"/>

            <Button
                    android:id="@+id/btnColor2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="#7C4DFF"/>

            <Button
                    android:id="@+id/btnColor3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

            <Button
                    android:id="@+id/btnColor4"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="#FFEB3B"/> <!-- Yellow -->

            <Button
                    android:id="@+id/btnColor5"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="#FF9800"/> <!-- Orange -->

            <Button
                    android:id="@+id/btnColor6"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#000000"/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Color"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"/>

        <SeekBar
                android:id="@+id/seekBarRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progressTint="#FF5252"
                android:thumbTint="#FF5252"
                android:layout_marginBottom="8dp"/>

        <SeekBar
                android:id="@+id/seekBarGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progressTint="#4CAF50"
                android:thumbTint="#4CAF50"
                android:layout_marginBottom="8dp"/>

        <SeekBar
                android:id="@+id/seekBarBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progressTint="#2196F3"
                android:thumbTint="#2196F3"
                android:layout_marginBottom="16dp"/>

        <Button
                android:id="@+id/btnApplyColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply Custom Color"
                android:textColor="#FFFFFF"
                android:backgroundTint="#B749CA"
                android:layout_marginTop="8dp"/>

        <RadioGroup
                android:id="@+id/rgBackgroundStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center">

            <RadioButton
                    android:id="@+id/rbSolidColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:buttonTint="@color/primary_text"
                    android:text="Solid Color"
                    android:checked="true"
                    android:layout_marginEnd="16dp"/>

            <RadioButton
                    android:id="@+id/rbBlurBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:buttonTint="@color/primary_text"
                    android:text="Blur Album Art"/>
        </RadioGroup>

    </LinearLayout>
</androidx.cardview.widget.CardView>