<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
                android:id="@+id/artistsHeader"
                style="@style/SearchHeader"
                android:text="Artists" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/artistsRecyclerView"
                style="@style/SearchRecyclerView" />

        <Button
                android:id="@+id/showAllArtistsButton"
                style="@style/ShowAllButton"
                android:text="Show All Artists" />

        <TextView
                android:id="@+id/albumsHeader"
                style="@style/SearchHeader"
                android:text="Albums" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/albumsRecyclerView"
                style="@style/SearchRecyclerView" />

        <Button
                android:id="@+id/showAllAlbumsButton"
                style="@style/ShowAllButton"
                android:text="Show All Albums" />

        <TextView
                android:id="@+id/songsHeader"
                style="@style/SearchHeader"
                android:text="Songs" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/songsRecyclerView"
                style="@style/SearchRecyclerView" />

        <Button
                android:id="@+id/showAllSongsButton"
                style="@style/ShowAllButton"
                android:text="Show All Songs" />

    </LinearLayout>
</ScrollView>