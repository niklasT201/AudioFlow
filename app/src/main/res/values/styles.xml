<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/search_header_background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="SearchRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:background">@drawable/search_result_background</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CategoryRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_result_background</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ShowAllButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorControlNormal">#B749CA</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TransparentAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>