<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AudioFlow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">false</item>

       <!-- <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item> -->
    </style>
    
    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:editTextColor">@color/background_color</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="CustomMaterialDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Dialog background -->
        <item name="colorSurface">@color/list_divider</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Button Colors (OK, Cancel, etc.) -->
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorOnPrimary">@color/primary_text</item>

        <!-- Icon Colors (if any) -->
        <item name="colorOnSurface">@color/primary_text</item>

        <item name="android:textSize">16sp</item>
    </style>

</resources>